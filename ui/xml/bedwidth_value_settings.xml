<screen>
	<styles>
		<style name="button_style" width="98" height="72" radius="8" bg_color="0x1a1040" />
		<style
			name="style_container"
			bg_color="0xffffff"
			border_color="0xd9d9d9"
			border_opa="255"
			border_width="1"
			width="448"
			height="366"
			radius="10"
			shadow_width="6"
			shadow_color="0x000000"
			shadow_opa="64"
			shadow_offset_x="0"
			shadow_offset_y="3"
			pad_all="16"
		/>
		<style
			name="style_inch_obj"
			bg_color="0xd1d1d1"
			border_color="0x707070"
			border_opa="255"
			width="35"
			height="50"
			pad_all="8"
		/>
	</styles>
	<view>
		<lv_obj scrollable="false" align="top_mid" y="60">
			<style name="style_container" />
			<lv_label
				text="Enter Custom Bed Width Value"
				style_text_color="0x31344e"
				width="416"
				height="20"
				style_text_font="opensans_semibold_18"
			/>

			<lv_textarea
				y="32"
				text=""
				style_text_color="0x787b91"
				width="416"
				height="50"
				style_pad_all="0"
				scrollable="false"
				style_radius="10"
			>
				<lv_label
					scrollable="false"
					text="Enter Bed Width"
					style_text_color="0x787b91"
					align="left_mid"
					style_pad_all="16"
					style_text_font="opensans_italic_16"
				/>
				<lv_obj align="right_mid" scrollable="false" style_border_width="0" style_radius="10">
					<style name="style_inch_obj" />
					<lv_label
						scrollable="false"
						text="in"
						style_text_color="0x787b91"
						style_text_font="opensans_regular_18"
						align="center"
					/>
				</lv_obj>
			</lv_textarea>

			<lv_buttonmatrix
				map="'1''2''3''4''\n''5''6''7''8''\n''8''9''0''1'"
				height="232"
				width="450"
				style_pad_bottom="16"
				style_border_width="0"
				align="bottom_mid"
				y="-16"
				ctrl_map="none"
			/>
		</lv_obj>
	</view>
</screen>
