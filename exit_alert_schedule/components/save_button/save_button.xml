<component>
	<!-- ========== API Section ========== -->
	<!-- Defines public properties that can be customized when using this component -->
	<api>
		<!-- "text" property controls the label text shown on the button -->
		<prop name="text" type="string" default="Save" />
	</api>

	<!-- ========== Preview Section ========== -->
	<!-- Used by LVGL Pro editor to show how the component will appear during design -->
	<previews>
		<preview height="480" width="480" />
	</previews>

	<!-- ========== Styles Section ========== -->
	<!-- Defines reusable visual style(s) applied to the button -->
	<styles>
		<!-- Primary button style for the save action -->
		<style
			name="style_save_button"
			bg_color="0x1a1040"
			width="448"
			height="80"
			bg_opa="153"
			radius="5"
			shadow_width="4"
			shadow_color="0x000000"
			shadow_opa="64"
			shadow_offset_x="0"
			shadow_offset_y="2"
			pad_hor="25"
			pad_ver="10"
		/>
	</styles>

	<!-- ========== View Section ========== -->
	<!-- The visual layout of the component -->
	<view extends="lv_button">
		<!-- Apply the defined save button style -->
		<style name="style_save_button" />

		<!-- Label inside the button displaying the $text property -->
		<lv_label text="$text" align="center" style_text_font="open_sans_bold_24" />
	</view>
</component>
